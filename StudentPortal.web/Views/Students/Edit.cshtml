@{
}
@model StudentPortal.web.Models.Entities.Student


@if (Model is null)
{
    <p>No student was found with this id</p>
}
else{

 <h1> Add Student</h1>

 <form method="post">

    <div class="mt-3">
        <label class="from-label">Id</label>
        <input type="text" class="from-control" asp-for="Id" readonly/>

    </div>
    <div class="mt-3">
        <label class="from-label">Name</label>
        <input type="text" class="from-control" asp-for="Name" />

    </div>

    <div class="mt-3">
        <label class="from-label">Email</label>
        <input type="email" class="from-control" asp-for="Email" />

    </div>

    <div class="mt-3">
        <label class="from-label">Phone</label>
        <input type="text" class="from-control" asp-for="Phone" />

    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>

    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
            asp-action="Delete"
            asp-controller="Students">Delete</button>

    </div>

 </form>
}
